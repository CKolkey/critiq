<!-- rendered form for creating questions -->
<div class="nested-fields">
  <div class="choice-type-and-question">
    <%= f.input :question_type,
          collection: [['text', 'Open-Text'], ['radio', 'Multiple Choice']],
          selected: 1,
          label_method: :second,
          value_method: :first,
          label: "Type",
          wrapper_html: {class: 'question-input-text'} %>
    <%= f.input :name,
          wrapper_html: { class: 'question-input-text' },
          label: "Question" %>
  <%# <%= f.input :multiple_choice, :as => :hidden, :input_html => { :value => "true" } %> %>
  <%= link_to_remove_association '<i class="fas fa-minus-circle"></i>'.html_safe, f,  class:"question-icon" %>
  </div>
  <!-- nested form for creating choices -->
</div>
<div id="choices">
  <div class="links">
    <%= link_to_add_association 'add choices', f, :choices, class:"btn btn-light" %>
  </div>
  <%= f.simple_fields_for :choices do |f| %>
  <%= render 'choice_fields', f: f %>
  <% end %>
</div>
