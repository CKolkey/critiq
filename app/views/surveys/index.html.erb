<div class="container">
  <h1>Index Page</h1>

  <!-- Searchbar -->
  <%= form_tag surveys_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a CRITIQ"
    %>
  <% end %>

  <!-- Display all surveys of the current user(controller) if surveys
       have been created -->
  <% if @surveys.count != 0 %>
    <% @surveys.each do |survey| %>
      <div>

        <!-- title of survey -->
        <h3><%= link_to survey.title, survey_path(survey)  %></h3>
        <!-- description of survey -->
        <p> <%= survey.description %> </p>
        <!-- status of survey; sent out? -->
        <% if survey.published %>
          <p>status: published </p>
        <% else %>
          <p>status: pending</p>
        <% end %>
        <!-- date of survey -->
        <p> <%= survey.created_at.strftime("%A, %b %d") %></p>
        <!-- % of responses as colored status bar (see Figma for) -->
        <!-- delete survey from index -->
        <%= link_to "delete", survey_path(survey), method: :delete%>
      </div>
    <% end %>
  <% else %>
    <h3> No surveys created so far </h3>
  <% end %>

  <button type="button" class="btn btn-primary"
  data-toggle="modal" data-target="#exampleModalCenter">
  New Critiq
</div>

  <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="exampleModalLongTitle">Create a Critiq!</h4>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= render partial: "new", locals: { survey: @survey }  %>
        </div>
        <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
      </div>
    </div>
  </div>


  <!-- Button redirects back to dashboard -->

  <%#= link_to "Back", root_path, class:"btn btn-danger" %>

