<% if all_questions.nil? %>
  <div class="bot-on-index">
    <%= image_tag("robot.png")%>
    <p style="color: grey;">No Critiq Selected</p>
  </div>
<% else %>

  <% all_questions.each_with_index do |question, q_index| %>
  <div class="card">
    <div class="card-header info-card-response-header">
      <h3 class="card-header-title">
      <% survey = Survey.find(params[:id]) %>
        <%= survey.title %>
      </h3>
      <h5 style="padding-top: 17px;">
        <%= survey.description %>
      </h5>
     <!--  <p style="text-align: left;"> <%= survey.description %></p> -->
    </div>
      <p class="recipients-info-text"> RECIPIENTS:</p>
    <div class="card-body info-card-response">
      <% survey.recipients.each do |recipient| %>
      <% unless recipient.first_name == "tinker"%>
        <div class="card-recipient-name" style="text-align: center;">
          <p>
             <%= recipient.first_name %> <%= recipient.last_name %>
          </p>
        </div>
       <% end %>
      <% end %>
    </div>
  </div>

  <div class="card">
    <h5 class="card-header"><%= q_index + 1 %>. <%= question[:name] %></h5>
    <div class="card-body" style="text-align: left;">
      <% if question[:question_type] == "text" %>

        <% if !question[:responses].nil? && question[:responses].empty? %>
        <h5 class="card-title">
          We'll send you a slack message when there are enough responses.
        </h5>
        <% else %>
          <% question.responses.each_with_index do |response, index| %>
          <h5 class="card-title">
            Response no.<%= index + 1 %>
          </h5>
          <p class="card-text" style="padding-left: 10px;">
            <%= response.content %>
          </p>
          <% end %>
        <% end %>
      </div>
    </div>
      <% else %>

        <% if !question[:responses].nil? && question[:responses].empty? %>
          <% question[:choices].each do |choice| %>
            <li><%= choice.name %></li>
          <% end %>

        <% else %>

        <div class="chart">
          <canvas id="<%= question.id %>_Chart" class="chart-canvas"></canvas>
        </div>

        <div id="<%= question.id %>_ChartLegend" class="chart-legend"></div>

        <%# <%= content_for :after_js do %>
        <div class="exec-chart-js">
          <script type="text/javascript">
            const makeChart<%= question.id %> = () => {
              // console.log("makeChart<%= question.id %> inside const")
              new Chart('<%= question.id %>_Chart', {
                type: 'pie',
                data: {
                  labels: <%= raw question.choices.map { |x| x.name } %>,
                  datasets: [{
                    data: <%= raw question.array_of_choice_percentages %>,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255,99,132,1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                  }]
                },
                options: {
                  legend: {
                      display: true,
                      position: 'left',
                      labels: {
                          fontSize: 18,
                      }
                    }
                  }
              });
            }

            console.log("calling makeChart<%= question.id %>();")
            makeChart<%= question.id %>();
          </script>
        </div>
          <%# <% end %>
        </div>
      </div>
      <% end %>
    <% end %>
  <% end %>
<% end %>
