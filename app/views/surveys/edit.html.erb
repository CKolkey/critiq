<h1>Edit page</h1>

<!-- Simple form for creating a new survey -->
<%= simple_form_for @survey do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <div id="questions">
    <%= f.simple_fields_for :questions do |f| %>
      <%= render 'question_fields', f: f %>
    <% end %>
      <div class="links">
        <%= link_to_add_association 'add questions', f, :questions %>
      </div>
  </div>
  <%= f.button :submit, class:"btn btn-primary" %>
<% end %>













<!-- Button which redirects to dashboard (index-page) -->
<%= link_to "Back", surveys_path, class:"btn btn-danger" %>
